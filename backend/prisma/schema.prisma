generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Country {
  id              Int     @id @default(autoincrement())
  name            String?
  continent       String?
  capital         String?
  largestCity     String?
  currency        String?
  language        String?
  population      Float?
  landArea        Float?
  agricultureArea String?
  forestArea      String?
  co2Emission     Float?
  image           String?

  Journal Journal[]
}

model Journal {
  id        Int      @id @default(autoincrement())
  countryId Int?
  country   Country? @relation(fields: [countryId], references: [id])
  reviews   Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  title     String?
  date      String?
  rating    Int?
  text      String?
  isPublic    Boolean?
  journal   Journal? @relation(fields: [journalId], references: [id])
  journalId Int?
}
